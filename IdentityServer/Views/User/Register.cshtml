@using ICar.IdentityServer.ViewModels.User

@model NewUserViewModel

<h1 class="register-title">ICar</h1>
<form method="post">
    <div class="container register-container">
        <h3 class="form-title">Register</h3>
        <div class="form-group">
            <label>CPF</label>
            <input type="text" asp-for="Cpf" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" asp-for="Email" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" asp-for="Password" class="form-control" required />
        </div>

        <button class="btn btn-danger" type="submit">Register</button>
    </div>
</form>