@using IdentityServer.ViewModels

@model LoginViewModel

<div class="login-page">
    <div class="description">

    </div>
    <main class="main-form">
        <h1 class="login-title">ICar</h1>
        <div class="container login-container">
            <form>
                <div class="form-group">
                    <label for="email-input">Email</label>
                    <input asp-for="Email" class="form-control" id="email-input" type="email" required />
                </div>
                <div class="form-group">
                    <label for="password-input">Password</label>
                    <input asp-for="Password" class="form-control" id="password-input" type="password" required />
                </div>
                <button class="btn-danger float-right" type="submit">Sign in</button>
            </form>
        </div>
    </main>
</div>